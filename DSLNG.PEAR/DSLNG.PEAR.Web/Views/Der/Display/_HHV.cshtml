@model DSLNG.PEAR.Web.ViewModels.Der.Display.DisplayKpiInformationViewModel
<table class="table table-bordered hhv vertical-space">
    <thead>
        <tr>
            <td colspan="2">
                HHV
            </td>
        </tr>
        <tr>
            <td>
                JOB PMTS
            </td>
            <td>
                MGDP
            </td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="vertical-align:middle">
                @Html.DisplayCompleteDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 0).DerItemValue.Value, Model.KpiInformationViewModels.Single(x => x.Position == 0).KpiMeasurement, "btu/scf") 
            </td>
            <td style="vertical-align:middle">
                @Html.DisplayCompleteDerValue(Model.KpiInformationViewModels.Single(x => x.Position == 1).DerItemValue.Value, Model.KpiInformationViewModels.Single(x => x.Position == 1).KpiMeasurement, "btu/scf")
            </td>
        </tr>
        <tr>
            <td class="special-height" style="background-color:#c4d79b">
                 @Html.DisplayDerValueWithLabelAtFront("min", Model.KpiInformationViewModels.Single(x => x.Position == 2).DerItemValue.Ytd, string.Empty, "N/A", true, 0)
            </td>
            <td style="background-color:#c4d79b">
                @Html.DisplayDerValueWithLabelAtFront("min", Model.KpiInformationViewModels.Single(x => x.Position == 3).DerItemValue.Ytd, string.Empty, "N/A", true, 0)
            </td>
        </tr>
    </tbody>
</table>

