@model DSLNG.PEAR.Web.ViewModels.Template.TemplateViewModel

<div class="template-view">
    <div class="row">
        <div class="col-md-12">
             <div class="page-header">
              <h3>@Model.Name</h3>
            </div>
        </div>
    </div>
    @foreach (var row in Model.LayoutRows)
    { 
        <div class="row layout-row">
            @foreach (var col in row.LayoutColumns)
            { 
                <div class="layout-column" style="width:@col.Width%;">
                    @if (col.ColumnType == "Artifact")
                    {
                        <div class="whitebox artifact-holder" style="height:350px;" data-artifact-url="@Url.Action("View", "Artifact", new { id = col.ArtifactId })">
                        </div>
                    }
                    else
                    {
                        <div class="whitebox highlight-holder" style="height:350px;" data-artifact-url="@Url.Action("View", "Highlight", new { typeId=col.HighlightTypeId, periodeType = col.HighlightPeriodeType })">
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>



